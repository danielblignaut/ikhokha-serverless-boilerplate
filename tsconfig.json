{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "pretty": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "strict": true, 
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "typings/**/*",
    "cli-tools/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}